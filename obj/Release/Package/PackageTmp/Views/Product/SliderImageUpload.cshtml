@model IEnumerable<MvcCF5.Models.Image>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Slider Resimleri</title>
    <link href="~/Content/themes/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div style="margin-left:10%;margin-top:5%">
        <div class="container">
            <div class="row">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @if (Model.Count()!= 0)
                {
                    foreach (var item in Model)
                    {
                            <div class="col">
                                <div>
                                    <img width="200" src="~/Content/images/@item.Img" alt="" />
                                    <br>&emsp;&emsp;&emsp;&emsp;<a href="@Url.Action("SliderImageDelete", "Product", new { item.Id })" class="btn btn-danger btn-sm"
                                                                   onclick="return confirm('Silmek istediğinizden emin misiniz?');">Del</a>
                                </div>
                            </div>
                        }
                }
                else
                {
                    <div>
                        <img height="200" src="~/Content/themes/assets/images/indir.png"><br />
                        <p>Lütfen dosya seçtikten sonra yükle tuşuna basın</p>
                    </div>

                }
            </div>
        </div>

        <br />
        <div>
            <form action="@Url.Action("SliderImageUpload","Product",new { id=ViewBag.prodId})" method="post" enctype="multipart/form-data">
                <input type="file" name="uploadfile" id="uploadfile" class="btn btn-primary" />
                <br />
                <input type="submit" value="Yükle" class="btn btn-primary" />
            </form>
        </div>
    </div>
</body>
</html>

