@{
    ViewBag.Title = "Hoşgeldiniz";
}

@if (Session["Id"] != null)
{
    <div class="container" style="height:450px;margin-top:100px">
        <h2>Hoşgeldiniz @Session["Name"]</h2>
        <div class="bodyInner">
            @if ((string)Session["Role"] == "Admin")
            {
                @Html.ActionLink("Admin Panel", "Index", "Admin", null, new { @style = "color:Black", @class = "btn btn-default" })
            }
            <br /><br />
            @Html.ActionLink("Anasayfaya Dön", "Index", "Home", null, new { @style = "color:Black", @class = "btn btn-default" })
        </div>

    </div>
}