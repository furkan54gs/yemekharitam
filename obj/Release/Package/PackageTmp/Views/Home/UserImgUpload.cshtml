@model MvcCF5.Models.Image

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserImgUpload</title>
    <link href="~/Content/themes/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    @if (Model.Img.IsEmpty())
    {


        <div>
            <img width="200" src="~/Content/themes/assets/images/indir.png"><br />
            <p>Lütfen dosya seçtikten sonra yükle tuşuna basın</p>
        </div>

    }
    else
    {
        <div>
            <img width="200" src="~/Content/images/@Model.Img" alt="" />
            <br>&emsp;&emsp;&emsp;&emsp;<a href="@Url.Action("UserImgDelete","Home",new { Model.Id})" class="btn btn-danger btn-sm"
                                           onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a>
        </div>
    }
    <br />
    <div>
        <form action="@Url.Action("UserImgUpload","Home",new { Model.UserImg})" method="post" enctype="multipart/form-data">
            <input type="file" name="uploadfile" id="uploadfile" class="btn btn-primary" />
            <br />
            <input type="submit" value="Yükle" class="btn btn-primary" />
        </form>
    </div>
</body>
</html>
