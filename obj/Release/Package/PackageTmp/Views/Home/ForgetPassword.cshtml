
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="@Url.Action("ForgetPassword","Home")" method="post">


    <div class="container" style="min-height:530px;margin-top:50px">
        <div class="bodyInner">
            <h2>Şifremi Unuttum</h2>
            <hr />
            <div class="form-horizontal">
                <div class="form-group">
                    @if (TempData["Message"] != null)
                    {
                        <h4 style="color:#00b60f">@TempData["Message"]</h4>
                    }
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("E-mail", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.Editor("email", new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        @Html.ValidationMessage("Lütfen geçerli bir e-posta adresi girin ", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Gönder" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>