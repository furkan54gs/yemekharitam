
@{
    ViewBag.Title = "ErrorPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height:530px;margin-top:50px">
    <div class="bodyInner">
        <h2 style="color:firebrick;margin-bottom:30px">Hata</h2>
        <hr />
        <br />
        @if (TempData["Message"] != null)
        {
            <h4>@TempData["Message"]</h4>}
        else
        {
            <h4>Bilinmeyen bir hata ile karşılaşıldı</h4>
        }
    </div>
</div>