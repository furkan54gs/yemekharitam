@model MvcCF5.Models.Supplier

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImageUpload</title>
    <link href="~/Content/themes/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div style="margin-left:10%;margin-top:5%">
        @if (Model.Image != null)
        {
            <div>
                <img width="200" src="~/Content/images/@Model.Image" alt="" />
                <br>&emsp;&emsp;&emsp;&emsp;<a href="@Url.Action("ImageDelete","Supplier",new { Model.Id})" class="btn btn-danger btn-sm"
                                               onclick="return confirm('Silmek istediğinizden emin misiniz?');">Del</a>
            </div>
        }
        else
        {
            <div>
                <img height="200" src="~/Content/themes/assets/images/indir.png"><br />
                <p>Lütfen dosya seçtikten sonra yükle tuşuna basın</p>
            </div>

        }
        <br />
        <div>
            <form action="@Url.Action("ImageUpload","Supplier",new { Model.Id})" method="post" enctype="multipart/form-data">
                <input type="file" name="uploadfile" id="uploadfile" class="btn btn-primary" />
                <br />
                <input type="submit" value="Yükle" class="btn btn-primary" />
            </form>
        </div>
    </div>
</body>
</html>
