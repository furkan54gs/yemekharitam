@model MvcCF5.Models.Message

@{
    Layout = null;
}
<link href="~/Content/admin/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<!--external css-->
<link href="~/Content/admin/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<!-- Custom styles for this template -->
<link href="~/Content/admin/css/style.css" rel="stylesheet">
<link href="~/Content/admin/css/style-responsive.css" rel="stylesheet">
<section id="main-content">
    <section class="wrapper site-min-height">

        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h4>Message</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        <input class="form-control text-box single-line" id="Email" name="Email" type="text" value="@Model.Email" readonly>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        <input class="form-control text-box single-line" id="Subject" name="Subject" type="text" value="@Model.Subject" readonly>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Messages, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        <textarea rows="3" cols="80" name="Messages" id="Messages"
                                  class="input-xlarge" readonly>@Model.Messages</textarea>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, "Case")
                    <div class="col-md-3">
                        <input class="form-control text-box single-line" id="Comment" name="Comment" type="text" value="@Model.Comment" readonly />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        <div class="checkbox">
                            <input class="form-control text-box single-line" id="Case" name="Case" type="checkbox" value="@Model.Status" />
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </section>
</section>